server {
    listen 80;
    listen [::]:80;
    server_name 37.152.187.31;
    return 302 https://$server_name$request_uri;
}

upstream app {
    least_conn;
    server 192.168.72.17:8002;
    server 192.168.72.14:8002;
}

upstream mag {
    server 192.168.72.13:8003;
}

upstream blog {
    server 192.168.72.30:8004;
}

upstream database { 
    server 192.168.72.17:8080;
}

server {
    # SSL configuration
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    ssl_certificate /etc/ssl/certs/nginx-selfsigned.crt;
    ssl_certificate_key /etc/ssl/private/nginx-selfsigned.key;

    server_name 37.152.187.31;


    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $host;


  location /mag {
    auth_basic           "Administratorâ€™s Area";
    auth_basic_user_file /etc/nginx/passwdfile;
    proxy_pass http://mag;

  }


  location = /database {
      return 302 http://database/;
  }

  location /blog {
    proxy_pass http://blog;
  }
  
  location /ali {
    proxy_pass http://blog;
    add_header arvan-loc ali always;
  }
  
  location / {

    proxy_pass http://app;
    
  }

  location ~[^?]/$ {

    proxy_pass http://app;
  
  }
  

}